require("./common.js");

var page = tabris.create("Page", {
	title: "ZegAppDemo",
	topLevel: true,
	image: "res/images/inditoikon.png",
});

tabris.ui.pageCreateSurrounds(page);

var size = 92;
var gap = 38;
var top = 15;
var dtop = 25;
var tgap = 3;
var imageInfo = tabris.create("ImageView", {
	image: {src: "res/images/info.png"},
	layoutData: {left: [50, -size-gap], width: size, top: [top, -size/2], height: size},
	highlightOnTouch: true,
}).appendTo(page);
tabris.create("TextView", {
	layoutData: {left: [50, -size-gap], top: [imageInfo, tgap], width: size},
	alignment: "center",
	text: "Info",
}).appendTo(page);

var imageTourism = tabris.create("ImageView", {
	image: {src: "res/images/turizmus.png"},
	layoutData: {left: [50, gap], width: size, top: [top, -size/2], height: size},
	highlightOnTouch: true,
}).appendTo(page);
tabris.create("TextView", {
  layoutData: {left: [50, gap], top: [imageTourism, tgap], width: size},
  alignment: "center",
  text: "Turizmus",
}).appendTo(page);


var imagePrograms = tabris.create("ImageView", {
	image: {src: "res/images/programok.png"},
	layoutData: {left: [50, -size-gap], width: size, top: [top+dtop, -size/2], height: size},
	highlightOnTouch: true,
}).appendTo(page);
tabris.create("TextView", {
  layoutData: {left: [50, -size-gap], top: [imagePrograms, tgap], width: size},
  alignment: "center",
  text: "Programok",
}).appendTo(page);

require("./freetime.js");
var imageFreetime = tabris.create("ImageView", {
	image: {src: "res/images/szabadido.png"},
	layoutData: {left: [50, gap], width: size, top: [top+dtop, -size/2], height: size},
	highlightOnTouch: true,
}).appendTo(page).on("tap", function(widget, event) { tabris.ui.openPageFreetime(); });
tabris.create("TextView", {
  layoutData: {left: [50, gap], top: [imageFreetime, tgap], width: size},
  alignment: "center",
  text: "Szabadidő",
}).appendTo(page).on("tap", function(widget, event) {tabris.ui.openPageFreetime();});


require("./ereport.js");
var imageEreport = tabris.create("ImageView", {
	image: {src: "res/images/ebejelentes.png"},
	layoutData: {left: [50, -size-gap], width: size, top: [top+dtop*2, -size/2], height: size},
}).appendTo(page).on("tap", function(widget, event) { tabris.ui.openPageEreport(); });
tabris.create("TextView", {
  layoutData: {left: [50, -size-gap], top: [imageEreport, tgap], width: size},
  alignment: "center",
  text: "E-bejelentés",
}).appendTo(page).on("tap", function(widget, event) {tabris.ui.openPageEreport();});

var imagePoll = tabris.create("ImageView", {
	image: {src: "res/images/chart.png"},
	layoutData: {left: [50, gap], width: size, top: [top+dtop*2, -size/2], height: size},
}).appendTo(page);
tabris.create("TextView", {
  layoutData: {left: [50, gap], top: [imagePoll, tgap], width: size},
  alignment: "center",
  text: "Szavazás",
}).appendTo(page);

page.open();